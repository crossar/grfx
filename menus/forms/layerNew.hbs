<form action="layerNew">
	{{#if fromUrl}}
		<div class="note">New Layer from URL</div>
		<div class="row"></div>
		<div>
			<label for="image-url">Image URL</label>
			<input type="text" id="image-url" name="image-url" autocomplete="off">
		</div>
		<div class="row"></div>
	{{/if}}

	{{#if fromImage}}
		<div class="note">New Layer from Image</div>
		<input
			type="text" id="data-uri" name="image-data-uri"
			class="hidden"
		>
		<div class="row"></div>
		<div class="row">
			<label for="image-local">Image</label>
			<input
				type="file" id="image-local" name="image-local"
				accept="image/*"
				onchange="document.getElementById('data-uri').value=URL.createObjectURL(event.target.files[0]);"
			>
		</div>
		<div class="row"></div>
	{{/if}}

	<div class="row align-right">
		<input type="submit" value="Cancel">
		<input type="submit" value="OK">
	</div>
</form>
