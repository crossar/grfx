<form data-action="layer-new-submit">

	{{#if fromUrl}}
		<title>New Layer from URL</title>
		<div class="row"></div>
		<div>
			<label for="image-url">Image URL</label>
			<input type="text" id="image-url" name="image-url" autocomplete="off">
		</div>
		<div class="row"></div>
	{{/if}}

	{{#if fromImage}}
		<title>New layer from Image</title>
		<div class="row"></div>
		<div class="row">
			<label for="image">Image</label>
			<input
				type="file" id="image" name="image"
				accept="image/*"
			>
		</div>
		<div class="row"></div>
	{{/if}}

	<div class="row align-right">
		<input type="submit" value="Cancel">
		<input type="submit" value="OK">
	</div>
</form>
